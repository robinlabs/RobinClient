<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:longClickable="true"
    android:paddingRight="0dp"
    android:paddingLeft="0dp" >

	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
   	    
		<ImageView
		    android:layout_width="18dp"
		    android:layout_height="14dp"
		    android:background="@drawable/chatbubble4_top_left" />
	    
		<ImageView
		    android:layout_width="match_parent"
		    android:layout_height="14dp"
	    	android:layout_marginRight="18dp"
		    android:background="@drawable/chatbubble4_top_fill" />
		
		<ImageView
		    android:layout_width="18dp"
		    android:layout_height="14dp"
		    android:layout_marginLeft="-19dp"
		    android:background="@drawable/chatbubble4_top_right" />
	    
	</LinearLayout>
     
	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
   	    
		<ImageView
		    android:id="@+id/leftViewBubleQuery"
		    android:layout_width="18dp"
		    android:layout_height="match_parent"
		    android:background="@drawable/chatbubble4_middle_left" />
	    
		<com.magnifis.parking.views.NoneScalableTextView
		    android:id="@+id/textViewBubleQuery"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
	    	android:layout_marginRight="18dp"
		    android:text="test"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    android:textColor="#333333"
		    android:background="@drawable/chatbubble4_middle_fill" />
				
		<ImageView
		    android:id="@+id/rightViewBubleQuery"
		    android:layout_width="18dp"
		    android:layout_marginLeft="-19dp"
		    android:layout_height="match_parent"
		    android:background="@drawable/chatbubble4_middle_right" />
	    
	</LinearLayout>
    
	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
   	    
		<ImageView
		    android:layout_width="18dp"
		    android:layout_height="14dp"
		    android:background="@drawable/chatbubble4_bottom_left" />
	    
		<ImageView
		    android:layout_width="match_parent"
		    android:layout_height="14dp"
	    	android:layout_marginRight="18dp"
		    android:background="@drawable/chatbubble4_bottom_fill" />
		
		<ImageView
		    android:layout_width="18dp"
		    android:layout_height="14dp"
		    android:layout_marginLeft="-19dp"
		    android:background="@drawable/chatbubble4_bottom_right" />
	    
	</LinearLayout>

</LinearLayout>
