<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sendSmsMain"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent">

    <include
        android:id="@+id/sendSmsBlock"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/suzie_buble_message" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ff008bec"
        android:padding="20dp"
        android:visibility="visible"
        android:layout_marginTop="220dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_send_sms_begin_dictating"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_centerVertical="true"
             />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@drawable/close_button"
                android:background="@android:drawable/list_selector_background"></ImageButton>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_send_sms_erase"
                android:textSize="18sp"
                android:layout_marginTop="4dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_send_sms_or"
                android:textSize="18sp"
                android:layout_marginTop="4dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_send_sms_delete"
                android:textSize="18sp"
                android:layout_marginTop="4dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_send_sms_toedit"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                 />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_send_sms_clearall"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_send_sms_toeraseeverything"
                android:textSize="18sp"
                android:layout_marginTop="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_send_sms_replacehiwithhowdy"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_send_sms_tosubstitute"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>