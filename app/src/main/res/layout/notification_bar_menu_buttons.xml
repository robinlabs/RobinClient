<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 
    
         remoteViews.setTextViewText(R.id.tray_robin_title,App.self.getString(R.string.P_tray_robin_title));
         remoteViews.setTextViewText(R.id.tray_car_title,App.self.getString(R.string.P_tray_car_title));
         remoteViews.setTextViewText(R.id.tray_phone_title,App.self.getString(R.string.P_tray_phone_title));
         remoteViews.setTextViewText(R.id.tray_sms_title,App.self.getString(R.string.P_tray_sms_title));
     -->




    <LinearLayout
        android:id="@+id/open_robin_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/open_robin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/open_robin_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="12dp"
            android:text="@string/tray_launch_robin"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/tray_robin_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
         android:layout_marginBottom="5dp"
        android:orientation="vertical" 
        android:layout_weight="1"
        >

    <ImageView
        android:id="@+id/tray_robin"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tray_robin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/P_tray_robin_title"
        android:textSize="12dp" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/tray_car_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:orientation="vertical" >

    <ImageView
        android:id="@+id/tray_car"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tray_car_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/P_tray_car_title"
        android:textSize="12dp" />

    </LinearLayout>
  
    <LinearLayout
        android:id="@+id/tray_hand_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

    <ImageView
        android:id="@+id/tray_hand"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tray_hand_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="12dp" />

    </LinearLayout>
 
    <LinearLayout
        android:id="@+id/tray_phone_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

    <ImageView
        android:id="@+id/tray_phone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tray_phone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/P_tray_phone_title"
        android:textSize="12dp" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/tray_sms_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

    <ImageView
        android:id="@+id/tray_sms"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tray_sms_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="12dp"
        android:text="@string/P_tray_sms_title"       
         />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tray_separator_layout"
        android:layout_width="3dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/tray_separator"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/tray_shutdown_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="2"
        android:orientation="vertical" >

    <ImageView
        android:id="@+id/tray_shutdown"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tray_shutdown_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="12dp"
        android:text="Switch off"
         />

    </LinearLayout>

      
</merge>
