<?xml version="1.0" encoding="utf-8"?>
<com.magnifis.parking.views.ScalableLL xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:orientation="vertical" >

    <com.magnifis.parking.views.ScalableLL
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:onClick="onBrowse"
        android:orientation="horizontal" >

        <com.magnifis.parking.views.ScalableLL
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/Image"
                android:layout_width="108px"
                android:layout_height="108px"
                android:background="@android:color/white"
                android:padding="4px"
                android:scaleType="fitCenter"
                android:src="@drawable/default_poi_image" />
        </com.magnifis.parking.views.ScalableLL>

        <!--  180px -->
        <com.magnifis.parking.views.ScalableLL
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="13px"
            android:orientation="vertical" >

            <com.magnifis.parking.views.FontFitTextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onBrowse"
                android:paddingBottom="2px"
                android:textColor="@android:color/white"
                android:textSize="28px" />

            <TextView
                android:id="@+id/Category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20px" />

            <com.magnifis.parking.views.Scalable
                android:layout_width="wrap_content"
                android:layout_height="21px"
                android:layout_marginTop="10px" >

                <ImageView
                    android:id="@+id/RatingImage"
                    android:layout_width="84px"
                    android:layout_height="17px"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/BasedOnNReviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="top"
                    android:layout_marginLeft="6px"
                    android:layout_toRightOf="@id/RatingImage"
                    android:textColor="@android:color/white"
                    android:textSize="15px" />
            </com.magnifis.parking.views.Scalable>
        </com.magnifis.parking.views.ScalableLL>
   </com.magnifis.parking.views.ScalableLL>

    <com.magnifis.parking.views.ScalableLL
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:onClick="onBrowse"
        android:orientation="vertical" >
        
     <TextView
        android:id="@+id/Recommendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3px"
        android:textColor="@android:color/white"
        android:textSize="17px" />
       
<!--  
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2px"
            android:text="Recommendation"
            android:textColor="#c3baba"
            android:textSize="17px"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="10px"
            android:id="@+id/Recommendation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onBrowse"
            android:textColor="@android:color/white"
            android:textSize="17px" />
        -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22px"
                android:layout_marginBottom="2px"
                android:text="@string/poi_openning_hours"
                android:textColor="#c3baba"
                android:textSize="17px"
                android:textStyle="bold" />            
           
        <com.magnifis.parking.views.ScalableLL
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.magnifis.parking.views.ScalableLL
                android:id="@+id/Hours0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" />

            <com.magnifis.parking.views.ScalableLL
                android:id="@+id/Hours1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" />
                
            <com.magnifis.parking.views.ScalableLL
                android:id="@+id/Hours2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" />
        </com.magnifis.parking.views.ScalableLL>        
    </com.magnifis.parking.views.ScalableLL>

</com.magnifis.parking.views.ScalableLL>