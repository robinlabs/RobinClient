<?xml version="1.0" encoding="utf-8"?>
<com.magnifis.parking.views.ScalableLLShort xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:orientation="vertical" >

    <com.magnifis.parking.views.ScalableLLShort
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.magnifis.parking.views.ScalableLLShort
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/Image"
                android:layout_width="108px"
                android:layout_height="108px"
                android:background="@android:color/white"
                android:padding="4px"
                android:scaleType="fitCenter"
                android:src="@drawable/default_poi_image" />
        </com.magnifis.parking.views.ScalableLLShort>

        <com.magnifis.parking.views.ScalableLLShort
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="13px"
            android:orientation="vertical" >

            <com.magnifis.parking.views.FontFitTextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2px"
                android:textColor="@android:color/white"
                android:textSize="28px" />
        </com.magnifis.parking.views.ScalableLLShort>
    </com.magnifis.parking.views.ScalableLLShort>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15px"
        android:text="Fuel Prices:"
        android:textColor="#c3baba"
        android:textSize="23px"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="300px"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:text="Regular"
                android:textSize="18px"
                android:textStyle="bold"
                android:gravity="left" 
                android:textColor="@android:color/white"
                android:layout_weight="1"
                 />
            <TextView
                android:id="@+id/PriceRegular"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:text="N/A"
                android:textSize="18px"
                android:textStyle="bold"
                android:gravity="right" 
                android:textColor="@android:color/white"
              />
            <!-- 
            <TextView
                android:id="@+id/PriceLowest"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:text="l"
                android:textSize="18px"
                android:textStyle="bold"
                android:gravity="center_horizontal" 
                android:textColor="#ff0000"
              />          
              -->
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:text="Plus"
                android:textSize="18px"
                android:textStyle="bold"
                android:gravity="left" 
                android:textColor="@android:color/white"
                android:layout_weight="1"
                 />
            <TextView
                android:id="@+id/PricePlus"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:text="N/A"
                android:textSize="18px"
                android:textStyle="bold"
                android:gravity="right" 
                android:textColor="@android:color/white"
              />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:text="Premium"
                android:textSize="18px"
                android:textStyle="bold"
                android:gravity="left" 
                android:textColor="@android:color/white"
                android:layout_weight="1"
                 />
            <TextView
                android:id="@+id/PricePremium"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:text="N/A"
                android:textSize="18px"
                android:textStyle="bold"
                android:gravity="right" 
                android:textColor="@android:color/white"
              />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:text="Diesel"
                android:textSize="18px"
                android:textStyle="bold"
                android:gravity="left" 
                android:textColor="@android:color/white"
                android:layout_weight="1"
                 />
            <TextView
                android:id="@+id/PriceDiesel"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:text="N/A"
                android:textSize="18px"
                android:textStyle="bold"
                android:gravity="right" 
                android:textColor="@android:color/white"
              />
        </TableRow>        
    </TableLayout>

</com.magnifis.parking.views.ScalableLLShort>