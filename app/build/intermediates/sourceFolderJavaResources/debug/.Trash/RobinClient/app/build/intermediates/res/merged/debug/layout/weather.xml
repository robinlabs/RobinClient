<?xml version="1.0" encoding="utf-8"?>
<com.magnifis.parking.views.Scalable xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <com.magnifis.parking.views.Scalable
        android:layout_width="432px"
        android:layout_height="329px"
        android:background="@drawable/weather_win" >

        <com.magnifis.parking.views.Scalable
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            
            android:layout_marginLeft="10px"
            android:layout_marginTop="3px"           
            android:layout_marginRight="20px"
            android:layout_marginBottom="35px"           
        >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="22px"
                android:layout_marginTop="18px"
                android:text="@string/P_current_conditions"
                android:textColor="@android:color/white"
                android:textSize="30px" />
            
            <ImageView
                android:id="@+id/CurrentWeatherIc"
                android:layout_width="58px"
                android:layout_height="58px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="22px"
                android:layout_marginTop="66px"
                android:scaleType="fitXY" 
                android:padding="3px"
                android:background="@android:color/white"
                android:visibility="gone"
                />
            
           <TextView 
                android:id="@+id/CurrentWeatherCond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="22px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="94px"
                android:layout_marginTop="60px"
            />
           
           <TextView 
                android:id="@+id/CurrentWeatherWind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="22px"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/CurrentWeatherCond"
                android:layout_marginLeft="94px"
            />
           
            <TextView
                android:id="@+id/CurrentWeatherTempr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="17px"
                android:layout_marginTop="85px"
                android:textColor="@android:color/white"
                android:textSize="30px" />
            
             <com.magnifis.parking.views.ForecastView
                android:id="@+id/ForecastView0"
                android:layout_width="78px"
                android:layout_height="109px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15px"
                android:layout_marginTop="158px"
                />       
                
             <com.magnifis.parking.views.ForecastView
                android:id="@+id/ForecastView1"
                android:layout_width="78px"
                android:layout_height="109px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="108px"
                android:layout_marginTop="158px"
                />       
             <com.magnifis.parking.views.ForecastView
                android:id="@+id/ForecastView2"
                android:layout_width="78px"
                android:layout_height="109px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="204px"
                android:layout_marginTop="158px"
                />  
             <com.magnifis.parking.views.ForecastView
                android:id="@+id/ForecastView3"
                android:layout_width="78px"
                android:layout_height="109px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="300px"
                android:layout_marginTop="158px"
                />               
        </com.magnifis.parking.views.Scalable>
        
    </com.magnifis.parking.views.Scalable>

</com.magnifis.parking.views.Scalable>