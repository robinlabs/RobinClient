        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:shadowColor">@android:color/background_dark</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
    </style>


    <style name="ButtonBackground">
        <item name="android:background">@android:color/background_dark</item>
    </style>
    
    <!--  -->
    <style name="TextAppearance.StatusBar" parent="@android:style/TextAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ff474747</item>
    </style>
   
   <style name="TextAppearance.StatusBar.Icon" parent="@style/TextAppearance.StatusBar">
        <item name="android:textStyle">bold</item>
